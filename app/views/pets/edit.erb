<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <h3><input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"></h3>

  <h3>Choose an existing owner:</h3>

  <% Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.name %>" <%='checked' if @pet.owner.name == owner.name %>><%= owner.name %></input>
  <% end%>

  <h3>And/Or Add A New Owner: <input  type="text" name="owner[name]" id="owner_name"></h3>

  <input type="submit" value="Update Pet">
</form>
