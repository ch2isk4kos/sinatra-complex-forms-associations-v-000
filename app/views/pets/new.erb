<h1>Create New Pet</h1>
<form action="/pets" method="POST">

  <h3>Pet Name: <input type="text" name="pet[name]" id="pet_name"></h3>

  <% Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%= owner.name %>" value="<%= owner.id %>"><%= owner.name %></input>
  <% end %>

  <h3>Add an Owner Name: <input  type="text" name="owner[name]" id="owner_name"></input></h3>

  <input type="submit" value="Create Pet">

</form>
